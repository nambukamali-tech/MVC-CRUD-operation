@model MVCcrudoperation.Models.LoginData

@{
    ViewBag.Title = "Login Page";
}
//Create Operation
@using (@Html.BeginForm("Index","Login",FormMethod.Post))
{ 
 <h1>Login</h1>
<table style = "border:1px solid black ; background-color : pink">
    <tr style="text-align:center">
        <td>Enter the UserID</td>
        <td>@Html.TextBoxFor(m => m.id) </td>
    </tr>
    <tr style="text-align:center">
        <td>Enter the UserName</td>
        <td>@Html.TextBoxFor(m => m.username) </td>
    </tr>
    <tr style="text-align:center">
        <td>
            <input type="submit" value="Proceed"/>     
        </td>
    </tr>
    <tr>
        <td>@ViewBag.d2</td>
    </tr>
</table>
}
//Update Operation
@using (@Html.BeginForm("Update", "Login", FormMethod.Post))
{
    <h1>Update Form</h1>
    <table style="border:1px solid black ; background-color : deepskyblue">
        <tr style="text-align:center">
            <td>Enter the UserID</td>
            <td>@Html.TextBoxFor(m => m.id) </td>
        </tr>
        <tr style="text-align:center">
            <td>Enter the UserName</td>
            <td>@Html.TextBoxFor(m => m.username) </td>
        </tr>
        <tr style="text-align:center">
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
        <tr>
            <td>@ViewBag.d3</td>
        </tr>
    </table>
}
//Delete Operation
@using (@Html.BeginForm("Delete", "Login", FormMethod.Post))
{
    <h1>Delete Form</h1>
    <table style="border:1px solid black ; background-color : deepskyblue">
        <tr style="text-align:center">
            <td>Enter the UserID</td>
            <td>@Html.TextBoxFor(m => m.id) </td>//For Deleting the Row from the 'login' table Only get 'ID' info from user.
        </tr>
        <tr style="text-align:center">
            <td>
                <input type="submit" value="Delete" />
            </td>
        </tr>
        <tr>
            <td>@ViewBag.d4</td>//Get the Details using Razor '@ViewBag'from the d4 object
        </tr>
    </table>
}





